{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block contenu %}
<h1 class="h3 mb-3 offset-1">Liste des Catégories - <a href='{{path('categorie_ajout')}}'>Ajouter une Catégorie</a></h1>
    <div class="table-responsive offset-1">
        <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Libellé</th>
                <th></th>
              </tr>
            </thead>
            {% if not liste is empty %}
            <tbody>
                {{ form_start(form)}}
                    {% for u in liste %}
                        <tr>
                            <td scope="row"><a href="{{ path('categorie_modifier',{'id':u.id})}}">{{u.id}}</a></th>
                            <td>{{u.libelle}}</td>
                            <td><input type="checkbox" name="cocher[]"  value="{{u.id}}"/></td>
                        </tr>
                    {% endfor %}
            {% else %}
                <td>Aucune catégorie à afficher</td><td></td><td></td>
            {% endif %}
            </tbody>
        </table>
        {{ form_widget(form.save) }}
        {{ form_end(form)}}
    </div>
{% endblock %}
