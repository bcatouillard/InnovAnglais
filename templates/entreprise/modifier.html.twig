{% extends 'base.html.twig' %}

{% block title %}Modifier une Entreprise{% endblock %}

{% block contenu %}
  <div align="center">
        <h1 class="h3 mb-3 font-weight-normal">Modification de l'entreprise</h1>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-row">
        {{ form_label(form.nom, 'Nom:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="form-row">
          {{ form_errors(form.nom) }}
          {{ form_widget(form.nom) }}
          {{ form_help(form.nom) }}
        </div>
    </div>
        <div class="form-row">
            {{ form_label(form.adresse, 'Adresse:', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="form-row">
          {{ form_errors(form.adresse) }}
          {{ form_widget(form.adresse) }}
          {{ form_help(form.adresse) }}
        </div>
        </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            {{ form_widget(form.save) }}
        </div>
    </div>
        <input type="hidden" id="form__token" name="form[_token]" value="Rt5KAlurW04xwwW9tuwHpfvxObmNrfhR0cI7zkXV38I" />    
        {{ form_end(form) }}
    </div>
{% endblock %}
