{% extends 'base.html.twig' %}

{% block title %}Liste des thèmes{% endblock %}

{% block contenu %}
    <h1 class="h3 mb-3 offset-1">Liste des Thèmes - <a href='{{path('theme_ajout')}}'>Ajouter un Thème</a></h1>
    <div class="table-responsive offset-1">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Libellé</th>
                    <th></th>
                </tr>
            </thead>
        {% if not liste is empty %}
            <tbody>
                {{ form_start(form)}}
                {% for u in liste %}
                  <tr>
                    <td scope="row"><a href="{{ path('theme_modifier',{'id':u.id})}}">{{u.id}}</a></td>
                    <td scope="row">{{u.libelle}}</td>
                    <td><input type="checkbox" name="cocher[]" value="{{ u.id }}"/></td>
                  </tr>
                {% endfor %}
            </tbody>
        {% else %}
            <tr><td>Aucun thème à afficher</td><td></td><td></td><td></td></tr>
        {% endif %}
        </table>
        {{ form_widget(form.save) }}
        {{ form_end(form)}}
    </div>
{% endblock %}
